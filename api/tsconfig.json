// Defines compile preferences for Typescript
{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist/js",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
      },
      "include": ["src/**/*"],
      "exclude": ["src/types/*.tsx", "node_modules", ".vscode"]
}